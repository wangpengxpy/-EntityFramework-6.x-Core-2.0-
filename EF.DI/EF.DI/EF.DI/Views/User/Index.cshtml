@model IEnumerable<EF.DI.Models.UserDTO>

<div class="book-example panel panel-primary">
    <div class="panel-heading panel-head">用户列表</div>
    <div class="panel-body">
        <a id="createEditBookModal" href="@Url.Action("CreateEditUser")" class="btn btn-success">
            <span class="glyphicon glyphicon-plus"></span> 添加
        </a>

        <table class="table" style="margin: 4px">
            <tr>
                <th>
                    @Html.DisplayName("Name")
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Address)
                </th>
                <th>Action
                </th>

                <th></th>
            </tr>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.FirstName) @Html.DisplayFor(modelItem=>item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.ActionLink("编辑", "CreateEditUser", new { id = item.ID }, new { @class = "btn btn-success" })
                        @Html.ActionLink("详细", "DetailUser", new { id = item.ID }, new { @class = "btn btn-primary" })
                        @Html.ActionLink("删除", "DeleteUser", new { id = item.ID }, new { @class = "btn btn-danger" })
                    </td>
                </tr>
            }

        </table>
    </div>
</div>


